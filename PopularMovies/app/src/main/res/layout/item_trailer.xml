<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_trailer_width"
    android:layout_height="@dimen/card_trailer_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/card_trailer_margin"
    android:backgroundTint="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/trailer_images_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/trailer_card_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/no_movie_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#60000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/ic_play_circle_filled"
                android:backgroundTint="@color/youtube_red"/>

        </FrameLayout>


        <TextView
            android:id="@+id/trailer_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trailer_images_layout"
            android:padding="8dp"
            android:maxLines="2"
            tools:text="Trailer 1"
            android:textColor="#222"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>